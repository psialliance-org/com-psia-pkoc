<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pkoc.readersimulator.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_displayPublicKeyFragment"
            app:destination="@id/displayPublicKeyFragment" />
    </fragment>

    <fragment
        android:id="@+id/displayPublicKeyFragment"
        android:name="com.psia.pkoc.core.DisplayPublicKeyFragment"
        android:label="Display Public Key"
        tools:layout="@layout/fragment_display_public_key" >
        <action
            android:id="@+id/action_displayPublicKeyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>
