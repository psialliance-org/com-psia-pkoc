<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dataManagementRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelSites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sites"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/siteRecycler"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:overScrollMode="ifContentScrolls"/>

        <TextView
            android:id="@+id/emptySites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No sites yet."
            android:visibility="gone"
            android:paddingTop="4dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/btnAddSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Site"
            android:layout_marginTop="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:id="@+id/labelReaders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Readers"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/readerRecycler"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:overScrollMode="ifContentScrolls"/>

        <TextView
            android:id="@+id/emptyReaders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No readers yet."
            android:visibility="gone"
            android:paddingTop="4dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/btnAddReader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Reader"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
